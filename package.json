{
  "name": "tv-insight-hbbtv-tracking-script",
  "version": "2.3.0",
  "main": "mock-session-application/session-application.ts",
  "scripts": {
    "mock-hbbtv-app": "nodemon --watch \"mock-hbbtv-application/**\" --ext \"ts,html\" --exec \"ts-node mock-hbbtv-application/hbbtv-server.ts\"",
    "mock-session-server": "nodemon --watch \"mock-session-application/**\" --ext \"ts\" --exec \"ts-node mock-session-application/session-server.ts\"",
    "mock": "concurrently \"yarn mock-session-server\" \"yarn mock-hbbtv-app\"",
    "dev": "concurrently \"yarn mock\" \"wait-on http://localhost:3000/health && wait-on http://localhost:8080/health && open http://localhost:8080\"",
    "test": "jest --verbose --silent --detectOpenHandles",
    "ci": "start-server-and-test mock-session-server http://localhost:3000/health test",
    "lint": "eslint --color --ext .ts mock-session-application",
    "lint:apply": "eslint --color --ext .ts mock-session-application --fix"
  },
  "repository": "git@github.com:rbredtech/tv-insight-hbbtv-tracking-script.git",
  "author": "Andreas Jantschnig <andreas.jantschnig@tv-insight.com>, Daniel Kocsan <daniel.kocsan@tv-insight.com>",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "source-map-support": "^0.5.21",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@jest/types": "^29.4.2",
    "@tsconfig/node16": "^1.0.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/node": "^20.14.10",
    "@types/puppeteer": "^7.0.4",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-plugin-source-map-support": "^2.2.0",
    "concurrently": "^7.6.0",
    "dotenv-load": "^2.0.1",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.4.2",
    "jest-puppeteer": "^10.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.4",
    "puppeteer": "^19.7.3",
    "start-server-and-test": "^2.0.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "wait-on": "^7.0.1"
  }
}
